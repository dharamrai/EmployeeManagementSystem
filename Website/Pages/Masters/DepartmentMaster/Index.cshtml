@page
@model Website.Pages.Masters.DepartmentMaster.IndexModel
@{
    ViewData["Title"] = "Department Master || EMS64";
}


<div class="card">

    <div class="card-header">
        <div class="d-flex justify-content-between align-content-center">

            <span class="card-footer fw-bold"> List of Department </span>
            <div class="d-flex flex-wrap gap-2">
                <a asp-page="Mange" class="btn btn-primary fw-bold">Add New</a>
            </div>

        </div>
    </div>

    <div class="card-body">

        <div class="row col-lg-8 offset-2 shadow-lg">
            @{
                if (Model.modelVm.Count > 0 && Model.modelVm != null)
                {
                    <table class="table table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>
                                    Sl
                                </th>
                                <th>
                                    Department
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                var sl = 1;
                                foreach (var item in Model.modelVm)
                                {
                                    <tr>
                                        <td>
                                            @sl
                                        </td>
                                        <td>
                                            @item.Department
                                        </td>
                                    </tr>
                                    sl++;
                                }
                            }

                        </tbody>
                    </table>
                }
                else
                {
                    <span class="fw-bold text-danger card-footer">No record found.</span>
                }
            }
        </div>

    </div>

</div>
